<Alloy>
  <!-- Main Window -->
  	 <Window id="articleWindow" title="Article Name" platform="android,ios">
 	
 	<View id="windowButtons">
 		<Button class="backButton" onClick="closeArticle"></Button>
 	</View>
 	
 	 	<View id="windowTitle">
		    <Label id="articleTitleText" class="windowTitleText"></Label>
		</View>
    
 	
    <!-- header -->
    
    <ScrollView id="articleContent" >
    	
	    <View id="articleSelected"> 
		   	<View class="buttonBuyItView" id="buttonBuyItView">
		     	<Button class="buttonBuyIt">
		     		<Label>
		     			BUY
		     		</Label>
		     	</Button>
	        </View> 
	       
		        <View class="borderArticle"> 
			     <ImageView id="articleSelectedImg"/>
				</View> 
							
				        <View class="buttonClosetView">
					     	<Button class="buttonCloset"></Button>
				        </View> 
				    
				       	<View class="buttonWearItView">
					     	<Button class="buttonWearIt"></Button>	
					    </View> 
				       
	      </View>
	
	    <View id="articleInfo">
	            <Label id="articleTitle">Article title</Label>
	            <Label id="articleInfoText">Article desct</Label>
 	    </View>
	
	</ScrollView>
	
  </Window>
</Alloy>  
